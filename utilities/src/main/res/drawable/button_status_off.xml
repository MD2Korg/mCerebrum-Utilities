<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/red_400" />
            <stroke
                android:width="2dp"
                android:color="@color/red_900" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/red_700"
                android:centerColor="@color/red_500"
                android:endColor="@color/red_700"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/red_900" />
            <corners
                android:radius="1000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
