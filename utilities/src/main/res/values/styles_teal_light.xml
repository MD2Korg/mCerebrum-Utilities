<resources>
    <!-- Base application theme. -->
    <style name="AppThemeTealLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/deeporange_A400</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:listSeparatorTextViewStyle">@style/AppThemeTealLight.PreferenceListHeader</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppThemeTealLight.textView_Header_Teal_Center">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppThemeTealLight.textView_Header_Teal_Left_Round">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppThemeTealLight.view_Divider_Teal">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="AppThemeTealLight.PreferenceListHeader" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/teal_700</item>
     </style>
    <style name="AppThemeTealLight.Button_Normal">
        <item name="android:background">@drawable/button_teal</item>
    </style>
 </resources>
