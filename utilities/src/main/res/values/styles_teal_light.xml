<resources>
    <!-- Base application theme. -->
    <style name="app_theme_teal_light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/deeporange_A400</item>
        <item name="android:textColor">@color/primary_text_color_selector</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:listSeparatorTextViewStyle">@style/app_theme_teal_light.preference_list_title</item>
        <item name="android:padding">0dp</item>
        <item name="button">@style/app_theme_teal_light.button</item>
        <item name="text_view_primary_color">@style/app_theme_teal_light.text_view_primary_color</item>
        <item name="text_view_title">@style/app_theme_teal_light.text_view_title</item>
    </style>

    <style name="app_theme_teal_light.text_view_title">
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="app_theme_teal_light.text_view_primary_color">
        <item name="android:textColor">@color/teal_A700</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="app_theme_teal_light.view_divider">
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="app_theme_teal_light.preference_list_title" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/teal_700</item>
     </style>
    <style name="app_theme_teal_light.button">
        <item name="android:background">@drawable/button_teal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
 </resources>
